{
  "log": {
    "loglevel": "warning"
  },
  "inbounds": [
    {
      "tag": "reality-vision",
      "listen": "0.0.0.0",
      "port": {{ xray_container_port }},
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "id": "{{ xray_uuid }}",
            "flow": "xtls-rprx-vision",
            "email": "vision@less",
            "shortIds": [
              {% for sid in xray_short_ids %}
              "{{ sid }}"{% if not loop.last %},{% endif %}
              {% endfor %}
            ]
          }
        ],
        "decryption": "none",
        "fallbacks": []
      },
      "streamSettings": {
        "network": "tcp",
        "security": "reality",
        "realitySettings": {
          "show": false,
          "dest": "{{ xray_deploy_effective_sni }}:443",
          "xver": 0,
          "serverNames": [
            "{{ xray_deploy_effective_sni }}"
          ],
          "privateKey": "{{ xray_reality_private_key }}",
          "publicKey": "{{ xray_reality_public_key }}",
          "maxClient": 64,
          "shortIds": [
            {% for sid in xray_short_ids %}
            "{{ sid }}"{% if not loop.last %},{% endif %}
            {% endfor %}
          ],
          "spiderX": "/"
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "tag": "direct"
    },
    {
      "protocol": "blackhole",
      "settings": {},
      "tag": "blocked"
    }
  ]
}
